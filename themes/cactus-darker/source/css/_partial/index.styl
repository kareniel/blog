#sociallinks
  display: inline-block
  list-style: none
  padding: 0
  margin: 0
  li
    display: inline-block
  li:after
    content: ", "
  li:last-child:after
    content: ""
  li:nth-last-child(3) ~ li:nth-last-child(2):after
    content: " and "

.post-list
  padding: 0
  .post-item
    list-style-type: none
    margin-left: 0
    margin-bottom: 1rem
    .meta
      display: block
      font-size: 14px
      color: $color-grey
      min-width: 100px
      margin-right: 16px
  .post-more
    float: right
    margin-left: 116px
    list-style-type: none


@media (min-width: 480px)
  .post-list
    .post-item
      display: flex
      margin-bottom: 5px
      .meta
        text-align: right

.project-list
  .project-item
    margin-bottom: 5px
