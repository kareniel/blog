#header
  max-width: 710px
  width: 100%
  margin: 0 auto 1rem auto

  h1,
    .h1
      text-transform: uppercase
      letter-spacing: 0.01em
      font-size: 1.1rem
      font-style: normal
      font-weight: 300
      color: $color-accent
      margin-top: 0
      margin-bottom: 0
      antialias()

    h2,
    .h2
      position: relative
      font-size: 1rem
      font-weight: bold
      text-transform: none
      letter-spacing: normal
      margin-top: 0
      margin-bottom: 0
      color: $color-lightest

  a
    color: inherit
    text-decoration: none
    background: none

  .logo
    float: left
    margin-right: 20px
    width: logo-width
    height: logo-height
    background-repeat: no-repeat
    background-image: url($logo-url)
    background-size: logo-width logo-height
